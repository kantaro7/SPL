@model SPL.WebApp.ViewModels.OnafViewModel

@{
    ViewData["Title"] = "Index";
    Layout = null;

}


<br />
<div class="progress" style="height:5px">
    <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<br />
<div class="row">
    <div class="col-md-12">
        <div class="btn-group" role="group">
            <button id="btnSave2" type="button" class="btn btn-primary btn-sm" disabled>Guardar</button>
            <button id="btnClear2" type="button" class="btn btn-secondary btn-sm"><i class="bi-eraser" style="font-size: 1.3rem;"></i></button>
        </div>
    </div>
    <div id="loader2" class="col-md-2" style="padding-bottom:8px;display:none;padding-top: 12px;">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Espere...</span>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="form-group">
        @(Html.ValidationSummary(true, "", new { @class = "alert alert-danger" }))

    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <form enctype="multipart/form-data" kendo-validator="true" id="form_base_template">
            <div class="container-fluid" style="background-color:white !important;">
                <div class="row">
                    <div class="col-md-12">
                        <div class="input-group-sm form-floating mb-3">
                            <input asp-for="NoSerie2" class="form-control form-control-sm" >
                            <label asp-for="NoSerie2"></label>
                            <span id="NoSerieSpand2" class="text-danger"></span>
                        </div>
                        <div class="col mb-3 form-group">
                            <label for="formFile" id="archivoT" class="form-label mt-4">Archivo a cargar</label>
                            <input disabled  class="form-control" type="file" asp-for="File">
                            <span asp-validation-for="File" id="FileSpan" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
                    <div id="toast-div" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                        <div id="notification-type" class="toast-body-alert">
                            <div id="notification-message"></div>
                            <button type="button" class="btn-close ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close">
                                <span aria-hidden="true"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    .k-dialog-title {
        visibility: hidden;
    }
</style>

@section Scripts
    {

    <script src="@Url.Content("~/js/Helpers/Helpers.js")"></script>
    <script src="@Url.Content("~/js/site.js")"></script>
    <script src="@Url.Content("~/js/Onaf/Onaf.js")"></script>
}