                                    <span asp-validation-for="CteTiempo" class="text-danger"></span>
                                </div>
                                <div class="col-1" style="text-align: left;">
                                    <label>(hr)</label>
                                </div>
                                <div class="w-100"></div>

                                @*FILA 4*@
