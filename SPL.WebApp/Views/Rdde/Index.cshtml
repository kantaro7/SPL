                                </div>
                                <div class="col-1" style="text-align: center;">
                                    <label>Hoja Enf. </label>
                                </div>
                                <div class="w-100"></div>

                                @*FILA 2*@
                                <div class="col-1">
                                    <label>TOR </label>
                                </div>
                                <div class="col-1">
                                    <input asp-for="TORLimite" onkeydown="filtroEntero()" type="number" class="form-control form-control-sm noBlanco" disabled>
                                    <span asp-validation-for="TORLimite" class="text-danger"></span>
                                </div>
                                <div class="col-1">
                                    <input asp-for="TORHoja" type="number"  class="form-control form-control-sm noBlanco" disabled>
                                    <span asp-validation-for="TORHoja" class="text-danger"></span>
                                </div>
