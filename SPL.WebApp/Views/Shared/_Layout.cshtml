        $("#resistencia_aislamiento_devanados").removeAttr("style");
        $("#relacion_de_transformacion").removeAttr("style");
        $("#factor_potencia_capacitancia").removeAttr("style");

        $("#relacion_aislamiento_nucleos").removeAttr("style");
    </script>
